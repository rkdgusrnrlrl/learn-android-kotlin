<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/id_area"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_red_light"
            android:layout_width="200dp" android:layout_height="40dp"></RelativeLayout>
    <RelativeLayout
            android:id="@+id/pwd_area"
            android:layout_below="@id/id_area"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:layout_alignLeft="@id/id_area"
            android:layout_alignRight="@id/id_area"
            android:layout_width="0dp" android:layout_height="40dp"></RelativeLayout>
    <RelativeLayout
            android:id="@+id/signup_area"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/pwd_area"
            android:background="@android:color/holo_orange_light"
            android:layout_width="70dp" android:layout_height="40dp"></RelativeLayout>
    <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_below="@+id/pwd_area"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_green_light"
            android:layout_alignTop="@id/signup_area"
            android:layout_alignBottom="@id/signup_area"
            android:layout_width="70dp" android:layout_height="0dp"></RelativeLayout>
</RelativeLayout>